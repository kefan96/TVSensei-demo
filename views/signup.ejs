<% include partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Sign Up for TVSensei</h5>
    <form id="signupform" onsubmit="submission()">
      <div class="form-row">
        <div class="form-group col-md-5 req">
          <label for="firstname">First Name</label>
          <input type="text" class="form-control" id="firstname" placeholder="First Name" required>
        </div>
        <div class="form-group col-md-5 req">
          <label for="lastname">Last Name</label>
          <input type="text" class="form-control" id="lastname" placeholder="Last Name" required>
        </div>
        <div class="form-group col-md-2 req">
          <label for="age">Age</label>
          <input type="number" class="form-control" id="age" placeholder="Age" required>
        </div>
      </div>

      <div class="form-group req">
        <label for="signupEmail">Email Address</label>
        <input type="email" class="form-control" id="signupEmail" placeholder="Enter email address" required>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6 req">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Enter password" onblur="strongPassword()" required>
        </div>
        <div class="form-group col-md-6" id="password-requirement">
          <h6><b>Password Requirements</b></h6>
          <ul>
            <li>6 - 20 characters</li>
            <li>at least ONE uppercase letter</li>
            <li>at least ONE lowercase letter</li>
            <li>at least ONE number</li>
          </ul>

        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6 req">
          <label for="confirmpassword">Confirm Password</label>
          <input type="password" class="form-control" id="confirmpassword" placeholder="Enter password" required>
        </div>
        <div class="form-group col-md-6">
          <h6 id="errormsg" class="hide" style="color: red; text-align: center" style="margin-top: 10px">
          </h6>
        </div>
      </div>

      <div>
        <button type="submit" class="btn btn-dark">Sign Up!</button>
        <p></p>

      </div>


    </form>
  </div>
</div>
<% include partials/footer %>