            );
        } else if ($("#source-language").val() == 'es') {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='en'>English</option>" +
                "<option value='ca'>Catalan</option>" +
                "<option value='fr'>Franch</option>"
            );
        } else {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='en'>English</option>");
        }
    }
</script>

