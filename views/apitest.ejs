<% include partials/header %>
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="container mt-5">
            <h1>APItest!</h1>
            <form action="/apitest" method="POST">
                <div class="row">
                    <div class="col-5">
                        <select name="input[source]" id="source-language" style="display: block; margin-bottom: 1.5rem;"
                            required onchange="changeTarget()">
                            <option value="" disabled selected>Choose your language</option>
                            <option value='ar'>Arabic</option>
                            <option value='bg'>Bulgarian</option>
                            <option value='ca'>Catalan</option>
                            <option value='zh'>Chinese (Simplified)</option>
                            <option value='zh-TW'>Chieses (Traditional)</option>
                            <option value='hr'>Croatian</option>
                            <option value='cs'>Czech</option>
                            <option value='da'>Danish</option>
                            <option value='nl'>Dutch</option>
                            <option value='en'>English</option>
                            <option value='et'>Estonian</option>
                            <option value='fi'>Finnish</option>
                            <option value='fr'>France</option>
                            <option value='de'>German</option>
                            <option value='el'>Greek</option>
                            <option value='he'>Hebrew</option>
                            <option value='hi'>Hindi</option>
                            <option value='hu'>Hungarian</option>
                            <option value='it'>Italian</option>
                            <option value='ja'>Japanese</option>
                            <option value='ko'>Korean</option>
                            <option value='nb'>Norwegian Bokmål</option>
                            <option value='pl'>Polish</option>
                            <option value='pt'>Portuguese</option>
                            <option value='ro'>Romanian</option>
                            <option value='ru'>Russian</option>
                            <option value='sk'>Slovak</option>
                            <option value='sl'>Slovenian</option>
                            <option value='es'>Spanish</option>
                            <option value='sv'>Swedish</option>
                            <option value='tr'>Turkish</option>
                        </select>
                        <textarea rows="10" name="input[text]" placeholder="Enter your text here" style="width: 100%;"
                            required></textarea>
                    </div>
                    <div class="col-2 d-flex flex-column justify-content-center align-items-center">
                        <input type="submit" value="Translate" class="btn btn-primary">
                    </div>
                    <div class="col-5">
                        <select name="input[target]" id="target-language" style="display: block; margin-bottom: 1.5rem;"
                            required>
                            <option value="" disabled selected>Choose your language</option>
                        </select>
                        <% if (translation) {%>
                        <textarea rows="10" disabled
                            style="width: 100%;"><%= translation.translations[0].translation %></textarea>
                        <% } %>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-1"></div>
</div>

<script>
    function changeTarget() {
        if ($("#source-language").val() == 'en') {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='ar'>Arabic</option>" +
                "<option value='ar'>Arabic</option>" +
                "<option value='bg'>Bulgarian</option>" +
                "<option value='ca'>Catalan</option>" +
                "<option value='zh'>Chinese (Simplified)</option>" +
                "<option value='zh-TW'>Chieses (Traditional)</option>" +
                "<option value='hr'>Croatian</option>" +
                "<option value='cs'>Czech</option>" +
                "<option value='da'>Danish</option>" +
                "<option value='nl'>Dutch</option>" +
                "<option value='en'>English</option>" +
                "<option value='et'>Estonian</option>" +
                "<option value='fi'>Finnish</option>" +
                "<option value='fr'>France</option>" +
                "<option value='de'>German</option>" +
                "<option value='el'>Greek</option>" +
                "<option value='he'>Hebrew</option>" +
                "<option value='hi'>Hindi</option>" +
                "<option value='hu'>Hungarian</option>" +
                "<option value='it'>Italian</option>" +
                "<option value='ja'>Japanese</option>" +
                "<option value='ko'>Korean</option>" +
                "<option value='nb'>Norwegian Bokmål</option>" +
                "<option value='pl'>Polish</option>" +
                "<option value='pt'>Portuguese</option>" +
                "<option value='ro'>Romanian</option>" +
                "<option value='ru'>Russian</option>" +
                "<option value='sk'>Slovak</option>" +
                "<option value='sl'>Slovenian</option>" +
                "<option value='es'>Spanish</option>" +
                "<option value='sv'>Swedish</option>" +
                "<option value='tr'>Turkish</option>"
            );
        } else if ($("#source-language").val() == 'fr') {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='de'>German</option>" +
                "<option value='en'>English</option>" +
                "<option value='es'>Spanish</option>"
            );
        } else if ($("#source-language").val() == 'de') {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='en'>English</option>" +
                "<option value='fr'>Franch</option>" +
                "<option value='it'>Italian</option>"
            );
        } else if ($("#source-language").val() == 'it') {
            $("#target-language").html("<option value='' disabled selected>Choose your language</option><option value='de'>German</option>" +
